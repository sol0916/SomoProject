CREATE TABLE HBOARD (
    BOARDNUM NUMBER(10) CONSTRAINT HBOARD_PK PRIMARY KEY,
    MEMID VARCHAR2(50),
    HNO NUMBER(10),
    BOWRITER VARCHAR2(50),
    BOTITLE VARCHAR2(50) NOT NULL,
    BOCONTENT VARCHAR2(1000),
    BOHIT NUMBER(38),
    BOREGDATE DATE
);

CREATE TABLE NOTICE (
    NtNo NUMBER(20),
    NtTitle VARCHAR2(30) NOT NULL,
    NtContent VARCHAR2(1000),
    NtRegdate DATE,
    NtHit NUMBER(38),
    Memid VARCHAR2(50)
);
ALTER TABLE NOTICE ADD CONSTRAINT NOTICE_PK PRIMARY KEY (NtNo);

CREATE TABLE MEMBER (
    MEMID VARCHAR2(50),
    MEMPW VARCHAR2(30) NOT NULL,
    MEMNAME VARCHAR2(30) NOT NULL,
    MEMPHONE VARCHAR2(30),
    MEMADDR VARCHAR2(100),
    MEMGENDER VARCHAR2 (10),
    MEMBIRTH VARCHAR2(20),
    MEMTYPE VARCHAR2(30),
    MEMNICK VARCHAR2(50) NOT NULL,
    MEMEMAIL VARCHAR2(30)
);
ALTER TABLE MEMBER ADD CONSTRAINT MEMID_pk PRIMARY KEY (MEMID);

CREATE TABLE HOBBY (
	Hno	NUMBER(10),
	Hname	VARCHAR(50) NOT NULL	
);
ALTER TABLE HOBBY ADD CONSTRAINT Hno_pk PRIMARY KEY (Hno);

CREATE TABLE Reple (
	Rno	NUMBER(10),
	BoardNum	VARCHAR(50),
	RContent	VARCHAR(50),
	RWriter	VARCHAR(50)
);
ALTER TABLE Reple ADD CONSTRAINT Rno_pk PRIMARY KEY (Rno);